<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DeminingApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        // make status bar icons colour grey
        <item name="android:windowLightStatusBar">true</item>
        // override the notch area
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        // make status bar transparent
        <item name="android:windowTranslucentStatus">true</item>
        // make navigation are transparent
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="Theme.DeminingApplication" parent="Base.Theme.DeminingApplication" />
</resources>